<%= simple_form_for @author do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, placeholder: "Enter your first name" %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :bio, input_html: {rows: 3}, placeholder: "Write something about yourself." %>
  <%= f.input :email %>
  <%= f.input :twitter %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit %>
<% end %>