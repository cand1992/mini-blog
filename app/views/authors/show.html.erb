<p id="notice"><%= notice %></p>

<h1>
<%= @author.full_name %>
</h1>

<p>
  <b>Username:</b>
  <%= @author.username %> | <%= mail_to @author.email %>
</p>

<p>
  <b>Bio:</b>
  <%= @author.bio %>
</p>

<p>
  <b>Twitter:</b>
  <%= @author.twitter %>
</p>
<hr />
<h3> <%= @author.username%>'s posts<h3/>
<% @author.posts.each do |post| %>
  <h2><%= link_to post.title.titleize, post%></h2>
  <h4><%= time_tag(post.published_at.to_date) %></h4>
  <p><%= simple_format(post.body) %></p>
<% end %>

<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
